<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme1"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        style="@style/buttonText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_blackbg"
        android:text="Edit" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_marginTop="120dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
               
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:text="Points:" />

            <TextView
                android:id="@+id/textView2"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@+id/textView2"
                android:text="Tier:" />

            <TextView
                android:id="@+id/textView5"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/textView2"
                android:text="Name:" />

            <TextView
                android:id="@+id/textView6"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView5"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView7"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="5dp"
                android:text="UserId:" />

            <TextView
                android:id="@+id/textView8"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignLeft="@+id/textView6"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView9"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView3"
                android:layout_toRightOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView10"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="5dp"
                android:text="Email:" />

            <TextView
                android:id="@+id/textView11"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignLeft="@+id/textView8"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView12"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="5dp"
                android:text="Password:" />

            <TextView
                android:id="@+id/textView13"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignTop="@+id/textView12"
                android:password="true"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView14"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView12"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="5dp"
                android:text="Cell:" />

            <TextView
                android:id="@+id/textView15"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView14"
                android:layout_alignBottom="@+id/textView14"
                android:layout_alignLeft="@+id/textView13"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView16"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView14"
                android:layout_below="@+id/textView14"
                android:layout_marginTop="5dp"
                android:text="Role:" />

            <TextView
                android:id="@+id/textView17"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView16"
                android:layout_alignBottom="@+id/textView16"
                android:layout_alignLeft="@+id/textView15"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView18"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView16"
                android:layout_below="@+id/textView16"
                android:layout_marginTop="5dp"
                android:text="Device:" />

            <TextView
                android:id="@+id/textView20"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignLeft="@+id/textView17"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView21"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView18"
                android:layout_below="@+id/textView18"
                android:layout_marginTop="5dp"
                android:text="Birthday:" />

            <TextView
                android:id="@+id/textView22"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView21"
                android:layout_alignBottom="@+id/textView21"
                android:layout_alignLeft="@+id/textView20"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView23"
                style="@style/labelViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView21"
                android:layout_below="@+id/textView21"
                android:layout_marginTop="5dp"
                android:text="Gender:" />

            <TextView
                android:id="@+id/textView19"
                style="@style/labelViewStyles"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView23"
                android:layout_below="@+id/textView23"
                android:layout_marginTop="5dp"
                android:text="Preferred Contact:" />

            <TextView
                android:id="@+id/textView24"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView22"
                android:layout_alignTop="@+id/textView23"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView25"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView19"
                android:layout_toRightOf="@+id/textView19"
                android:text="TextView" />

            <TableRow
                android:id="@+id/tableTshirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView19"
                android:layout_below="@+id/textView19" >

                <TextView
                    android:id="@+id/txtTshirtSize"
                    style="@style/labelViewStyles"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="T-Shirt Size:"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtTshirtSizeData"
                    style="@style/textViewStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:id="@+id/tableMprovider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView19"
                android:layout_below="@+id/tableTshirt"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/txtMobileProvider"
                    style="@style/labelViewStyles"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Mobile Provider:"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtMproviderData"
                    style="@style/textViewStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRewrdHistory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableMprovider"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/textView27"
                    style="@style/specialTextViewStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View My History"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView26"
                    style="@style/specialTextViewStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="View My Rewards"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRewrdHistory"
                android:gravity="center"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/imgAddProfile"
                    android:layout_width="220dip"
                    android:layout_height="45dip"
                    android:src="@drawable/lastone" />
            </TableRow>
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView28"
        style="@style/headingStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_centerHorizontal="true"
        android:text="PROFILE" />

</RelativeLayout>