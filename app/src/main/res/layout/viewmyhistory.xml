<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/theme1"
  android:padding="10dip">
		<LinearLayout
		  android:orientation="vertical"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  >
			    <TextView 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="MY HISTORY"
			  style="@style/headingStyles"
			  android:layout_marginTop="55dp"
			  android:layout_gravity="center_horizontal"
			  android:paddingTop="30dp"/>
			  <TextView 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="Reward credits reset each school year, these are your last five attended events."
			  style="@style/textViewStyles"
			 android:gravity="center"
			  android:paddingBottom="5dip"
			  />
		  </LinearLayout>
		  <LinearLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal" >
			    <TextView 
			  android:layout_width="70dp"
			  android:layout_height="wrap_content"
			  android:text="Date"
			  style="@style/textViewStyles"
			  android:paddingRight="30dp"/>
			  <TextView 
			  android:layout_width="150dp"
			  android:layout_height="wrap_content"
			  android:text="Event Info"
			  style="@style/textViewStyles"
			 android:paddingRight="20dp"/>
			  <TextView 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="Points"
			  style="@style/textViewStyles"/>
		  </LinearLayout>
	
	  	  
 <ListView
 	android:id="@android:id/list"
 	android:layout_width="fill_parent"
 	android:layout_height="230dp"
 	 android:divider="@android:color/transparent"
	android:cacheColorHint="@android:color/transparent"
    android:dividerHeight="5dp"
 	android:layout_weight="1"/>
 
 <TextView android:id="@android:id/empty"
               android:layout_width="fill_parent"
               android:background="@android:color/transparent"
               android:layout_height="150dp"
               android:layout_weight="1"
               android:text="No History"
               style="@style/headingStyles"></TextView>
 
 
 
	<TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRewrdHistory"
        android:gravity="center"
        android:paddingTop="5dp">
       <ImageView
        android:id="@+id/imgAddHistory"
        android:layout_width="220dip"
        android:layout_height="45dip"
        android:src="@drawable/lastone"
       /></TableRow>
	
  <TextView
  android:id="@+id/lnkHWebsite"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  style="@style/textViewStyles"
  android:gravity="center"
  android:layout_weight="0">
              </TextView>
  </LinearLayout>