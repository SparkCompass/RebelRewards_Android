<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/theme1"
     >
    <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="60dp">
     <Button
        android:id="@+id/btnEdit"
        style="@style/buttonText"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_blackbg"
        android:text="Edit" android:textSize="24sp"/>
    
    </TableRow>
    
    <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp">
     <TextView
        android:id="@+id/txtHProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="PROFILE"
        style="@style/headingStyles" 
        android:textSize="32sp"/>
    
    </TableRow>
    
    <ScrollView  android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="360dp"
       >
        
       <LinearLayout android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           
         <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="50dp"
           android:layout_marginTop="10dp">
           
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Points:"
                style="@style/labelViewStyles" android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPPoints"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tier:"  android:textSize="22sp"
                style="@style/labelViewStyles"
                android:layout_marginLeft="120dp"/>
           
           <TextView android:id="@+id/txtPTier"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           
       </TableRow>    
         
           
         
       <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Name:"
                style="@style/labelViewStyles" android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPName"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           
           
       </TableRow>    
           
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="UserId:"  android:textSize="22sp"
                style="@style/labelViewStyles"/>
           
           <TextView android:id="@+id/txtPUserId"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           </TableRow>
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Email:"
                style="@style/labelViewStyles"  android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPEmail"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           </TableRow>
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Password:"
                style="@style/labelViewStyles" android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPPassword"
                style="@style/textViewStyles"   android:password="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           </TableRow>
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Cell"  android:textSize="22sp"
                style="@style/labelViewStyles"/>
           
           <TextView android:id="@+id/txtPCell"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="22sp"/>
           </TableRow>
           
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Role:"   android:textSize="22sp"
                style="@style/labelViewStyles"/>
           
           <TextView android:id="@+id/txtPRole"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           </TableRow>
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Device:"  android:textSize="22sp"
                style="@style/labelViewStyles"/>
           
           <TextView android:id="@+id/txtPDevice"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="22sp" />
           </TableRow>
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Birthday:"
                style="@style/labelViewStyles"  android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPBirthdy"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="22sp"/>
           </TableRow>
           
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Gender:"
                style="@style/labelViewStyles"  android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPGender"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           </TableRow>
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Preferred Contact:"
                style="@style/labelViewStyles"
                android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPPrfdContact"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_gravity="center"/>
           </TableRow>
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="T-Shirt Size:"
                style="@style/labelViewStyles"  android:textSize="22sp"/>
           
           <TextView android:id="@+id/txtPTShirtSize"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
           </TableRow>
           
           
           
           <TableRow android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="5dp">
           
           <TextView android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Mobile Provider:"   android:textSize="22sp"
                style="@style/labelViewStyles"/>
           
           <TextView android:id="@+id/txtPMobileProvider"
                style="@style/textViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_gravity="center"   android:textSize="22sp"/>
           </TableRow>
           
           
           
           
           
           
       </LinearLayout> 
        
    
        
    </ScrollView>
    
    <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:id="@+id/tableRewrdHistory"
                android:layout_below="@+id/tableMprovider"
                 android:paddingTop="20dp" 
               
                android:layout_gravity="center"
                android:paddingLeft="40dp">
             <TextView
                android:id="@+id/txtViewMyHistory"
                style="@style/specialTextViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View My History"  android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/txtViewMyrewards"
                style="@style/specialTextViewStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:text="View My Rewards"  android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
               />
            
            </TableRow>
           
           <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRewrdHistory"
        android:gravity="center"
        android:layout_marginTop="15dp">
       <ImageView
        android:id="@+id/imgAddProfile"
        android:layout_width="320dip"
        android:layout_height="90dip"
        android:src="@drawable/lastone"
       /></TableRow>
    

</LinearLayout>