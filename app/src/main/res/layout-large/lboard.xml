<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/theme1"
    android:orientation="vertical" >
    
    
    
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="240dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp" >
    </ListView>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView1"
        android:gravity="center"
        android:paddingTop="10dp">
     <ImageView
        android:id="@+id/imgAddLboard"
        android:layout_width="320dip"
        android:layout_height="90dip"
        android:src="@drawable/lastone"
       
         android:layout_alignBaseline="@+id/listView1"
         android:layout_alignBottom="@+id/listView1"
        
        />
    </TableRow>
    <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="70dp">
         
            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Show All" 
                android:background="@drawable/btn_blackbg"
                style="@style/buttonText"
                  />
             <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:background="@drawable/btn_blackbg"
                style="@style/buttonText"
                android:visibility="gone"/>    
        </LinearLayout>
        
        
    

    

    <TextView
        android:id="@+id/textView3"
        style="@style/headingStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="LEADERBOARD" 
        android:textSize="28sp"/>
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        android:gravity="center" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/textViewStyles"
             android:text="Rank: " 
             android:visibility="gone"/>
         <TextView
             android:id="@+id/textView11"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/textViewStyles"
             android:text=" - "
             android:visibility="gone" />
         
         <TextView
             android:id="@+id/textView12"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/textViewStyles"
             android:text="Points: " 
             android:layout_marginLeft="20dp"
             android:visibility="gone"/>
         <TextView
             android:id="@+id/textView13"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/textViewStyles"
             android:text=" - "
             android:visibility="gone" />
        
        </LinearLayout>
        
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:gravity="center" >

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Top 25"
             style="@style/textViewStyles" />
        <TextView
             android:id="@+id/textView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="TextView"
             style="@style/textViewStyles"
             android:visibility="gone" />
        
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtLHRank"
            style="@style/textViewStyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text="@string/rank" />

        <TextView
            android:id="@+id/txtLHRank1"
            style="@style/textViewStyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text="@string/rank"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtLHName"
            style="@style/textViewStyles"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:padding="10dp"
            android:paddingLeft="12dp"
            android:text="@string/name" />

        <TextView
            android:id="@+id/txtLHName1"
            style="@style/textViewStyles"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:padding="10dp"
            android:paddingLeft="12dp"
            android:text="@string/name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lnkLHPoints"
            style="@style/textViewStyles"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:text="@string/points" />

        <TextView
            android:id="@+id/lnkLHPoints1"
            style="@style/textViewStyles"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:text="@string/points"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lnkLHTier"
            style="@style/textViewStyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="15dp"
            android:text="@string/tier" />

        <TextView
            android:id="@+id/lnkLHTier1"
            style="@style/textViewStyles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="15dp"
            android:text="@string/tier"
            android:visibility="gone" />
        
        
       
        
        
    </LinearLayout>

</RelativeLayout>
