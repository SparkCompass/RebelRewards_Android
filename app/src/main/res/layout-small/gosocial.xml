<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
  	android:layout_height="match_parent"
  	  android:background="@drawable/theme1"
  	  android:orientation="vertical">
	
	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:layout_height="fill_parent"
	  
	  android:paddingLeft="10dip"
	  >

		<TextView
		    style="@style/headingStyles"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="70dp"
		    
		    android:layout_gravity="center"
		    android:text="GO SOCIAL" />
	  
	  <LinearLayout 
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="10dip"
	  >
	  <ImageView
	   android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	android:src="@drawable/facebook"
	   />
	   <LinearLayout 
	    android:layout_width="fill_parent"
	  android:layout_height="50dip"
	    android:orientation="vertical"
	  android:layout_marginLeft="5dip"
	  >
	  <TextView 
	
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="Connect with us on Facebook"
	  style="@style/subheadingStyles"/>
	  
	   <TextView 
	   android:id="@+id/lnkFacebook"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:autoLink="web"
	  android:text="facebook.com/RebelRewards"
	  style="@style/linkStyles"/>
	  
	  </LinearLayout>
	  </LinearLayout>
	    
	    
	    <LinearLayout 
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="8dip"
	  >
	  <ImageView
	   android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	android:src="@drawable/twit_icon"
	   />
	   <LinearLayout 
	    android:layout_width="fill_parent"
	  android:layout_height="50dip"
	    android:orientation="vertical"
	  android:layout_marginLeft="5dip"
	  >
	  <TextView 
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="Follow us on Twitter"
	  style="@style/subheadingStyles"/>
	  
	   <TextView 
	   android:id="@+id/lnkTwitter"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:autoLink="web"
	  android:text="twitter.com/RebelRewards"
	  style="@style/linkStyles"/>
	  
	  </LinearLayout>
	  </LinearLayout>
	  
	  
	  <LinearLayout 
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="8dip"
	  >
	  <ImageView
	   android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	android:src="@drawable/yt_icon"
	   />
	   <LinearLayout 
	    android:layout_width="fill_parent"
	  android:layout_height="50dip"
	    android:orientation="vertical"
	  android:layout_marginLeft="5dip"
	  >
	  <TextView 
	   android:id="@+id/lnkYoutube"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:text="@string/lnkYouTube"
	  style="@style/subheadingStyles"
	  />
	  </LinearLayout>
	  
	  </LinearLayout>
	  
	  
	  
	   <LinearLayout 
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_marginTop="5dip"
	  android:visibility="gone"
	  >
	  <ImageView
	   android:src="@drawable/foursquare_logo" android:layout_width="110dp" android:layout_height="25dp"/>
	   
	  <TextView 
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:autoLink="web"
	  android:text="@string/lnkfoursquare"
	  style="@style/subheadingStyles"/>
	  
	  </LinearLayout>
	  
	   <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRewrdHistory"
        android:gravity="center"
        android:paddingTop="0dp">
       <ImageView
        android:id="@+id/imgAddGosocial"
        android:layout_width="220dip"
        android:layout_height="45dip"
        android:src="@drawable/lastone"
       
        /></TableRow>
	 
	</LinearLayout> 

</LinearLayout>
