<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/theme1"
  android:padding="10dip">
		<LinearLayout
		  android:orientation="vertical"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  >
			    <TextView 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="MY HISTORY"
			  style="@style/headingStyles" android:textSize="32sp"
			  android:layout_marginTop="200dp"
			  android:layout_gravity="center_horizontal"/>
			  <TextView 
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:text="Reward credits reset each school year, these are your last five attended events."
			  style="@style/textViewStyles" android:textSize="24sp"
			  android:gravity="center"
			  android:layout_marginTop="10dp"/>
		  </LinearLayout>
		  <LinearLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:orientation="horizontal" 
		  android:layout_marginTop="15dp">
			    <TextView 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="Date" android:textSize="20sp"
			  style="@style/textViewStyles"
			  android:layout_marginLeft="25dp"/>
			  <TextView 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="Event Info" android:textSize="20sp"
			  style="@style/textViewStyles"
			  android:layout_marginLeft="180dp"/>
			  <TextView 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:text="Points" android:textSize="20sp"
			  style="@style/textViewStyles"
			  android:layout_marginLeft="150dp"/>
		  </LinearLayout>
		  
 	<ScrollView  android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >
        
       <LinearLayout android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">	  	  
 <ListView
 	android:id="@android:id/list"
 	android:layout_width="fill_parent"
 	android:layout_height="380dp"
 	 android:divider="@android:color/transparent"
	android:cacheColorHint="@android:color/transparent"
    android:dividerHeight="5dp"
 	android:layout_weight="1"/>
 
 <TextView android:id="@android:id/empty"
               android:layout_width="fill_parent"
               android:background="@android:color/transparent"
               android:layout_height="300dp"
               android:layout_weight="1"
               android:text="No History"
               style="@style/headingStyles"></TextView>
 
 </LinearLayout></ScrollView>
 
	<TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRewrdHistory"
        android:gravity="center"
        android:paddingTop="5dp">
       <ImageView
        android:id="@+id/imgAddHistory"
        android:layout_width="320dip"
        android:layout_height="90dip"
        android:src="@drawable/lastone"
       /></TableRow>
              
 
  <TextView
  android:id="@+id/lnkHWebsite"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  style="@style/textViewStyles"
  android:gravity="center"  android:textSize="22sp"
  android:layout_weight="0">
              </TextView>
  </LinearLayout>